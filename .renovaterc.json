{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-lib",
    "github>discordjs-japan/renovate-config",
    ":assignAndReview(Mogyuchi)"
  ],
  "packageRules": [
    {
      "groupName": "napi-rs monorepo",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "minor",
        "major"
      ],
      "matchPackageNames": [
        "/^napi/",
        "/^@napi-rs//"
      ]
    }
  ],
  "customDatasources": {
    "rust-nightly": {
      "defaultRegistryUrlTemplate": "https://static.rust-lang.org/dist/channel-rust-nightly-date.txt",
      "format": "plain"
    }
  },
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "toml",
      "managerFilePatterns": ["^rust-toolchain\\.toml$"],
      "matchStrings": [
        "toolchain.{ 'currentValue': channel }"
      ],
      "depNameTemplate": "rust-lang/rust",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver",
      "depTypeTemplate": "dependencies"
    }
  ]
}
